RUN git clone https://github.com/google/gnxi.git \
    && cd gnxi \
    && git checkout 208acfa85f5b5b8717e14896e9d6ee93cfda9d5f

COPY gnxi-patches/ gnxi/patches/


{% if PTF_ENV_PY_VER == "mixed" %}
RUN cd gnxi \
    && quilt push -a \
    && cd gnmi_cli_py \
    && pip install -r requirements.txt
{% else %}
